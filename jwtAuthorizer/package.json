{
  "name": "jwt-authorizer",
  "version": "1.0.0",
  "description": "lambda che decodifica e valida i token JWT “Access Token” generati dal servizio di “Token Exchange” ed aggiunge eventuali attributi dell’utente collegati alla API Key impostati come header nelle chiamate ai micro-servizi di backend.",
  "main": "index.js",
  "scripts": {
    "test-build": "npm run-script test && npm run-script coverage && npm run-script sonar && npm run-script build",
    "build": "npm prune --production && rm -f ./function.zip && zip -r ./function.zip . -x './src/test/*' -x '*.md' -x '*.env'  -x '*.gitignore'",
    "test": "nyc --reporter=html --reporter=text mocha './src/test/**/*.test.js' --recursive --timeout=3000 --exit -r dotenv/config",
    "coverage": "nyc report --reporter=lcov",
    "sonar": "node sonarqube-scanner.js -Dsonar.login=${SONAR_TOKEN}"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-xray-sdk-core": "^3.3.6",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.5",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "aws-sdk": "^2.1066.0",
    "aws-sdk-mock": "^5.7.0",
    "chai": "^4.3.6",
    "lambda-tester": "^4.0.1",
    "mocha": "^9.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rewire": "^6.0.0",
    "sonarqube-scanner": "^2.8.2"
  }
}
