{
  "name": "apikey-authorizer",
  "version": "1.0.0",
  "description": "lambda per verificare lo stato della Api Key proveniente dal client dell’API, decodificare il “cliente”, aggiungere eventuali attributi dell’utente collegati alla API Key impostati come header nelle chiamate ai micro-servizi",
  "main": "index.js",
  "scripts": {
    "test-build": "npm run-script test && npm run-script coverage && npm run-script sonar && npm run-script build",
    "build": "npm prune --production && rm -f ./function.zip && zip -r ./function.zip . -x './src/test/*' -x '*.md' -x '*.env'  -x '*.gitignore'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "sonar": "node sonarqube-scanner.js -Dsonar.login=${SONAR_TOKEN}"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "silent": false,
    "transform": {},
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "aws-sdk": "^2.1354.0",
    "aws-sdk-mock": "^5.6.2",
    "chai": "^4.3.6",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "lambda-tester": "^4.0.1",
    "mocha": "^9.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sonarqube-scanner": "^2.8.2"
  },
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.410.0",
    "aws-sdk-client-mock": "^3.0.0",
    "aws-xray-sdk": "^3.5.1",
    "aws-xray-sdk-core": "^3.3.6",
    "sinon": "^14.0.0"
  }
}
